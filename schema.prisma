datasource db {
  url      = env("MYSQL_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model cities {
  id           Int        @id
  name         String
  state_id     Int        @unique
  state_code   String
  country_id   Int        @unique
  country_code String
  state        states?
  country      countries?
}

model states {
  id           Int     @id
  name         String
  country_id   Int
  country_code String
  iso2 String
  city         cities? @relation(fields: [id], references: [state_id])
}

model countries {
  id   Int    @id
  name String
  city cities @relation(fields: [id], references: [country_id])
}
